@model Model.EF.tbl_ChuDe

@{
    ViewBag.Title = "Sửa chủ đề bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section scripts{
    <script>
        $('#btnChuDeIMG').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtChuDeIMG').val(url);
            };
            finder.popup();
        })

    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <input type="hidden" id="hdnIDChuDe" name="hdnID" value="@Model.IDChuDe" />

    <div class="form-group">
        @Html.LabelFor(model => model.sTenChuDe, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.sTenChuDe, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.sTenChuDe, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.sImage, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sImage, new { htmlAttributes = new { @class = "form-control", @id = "txtChuDeIMG" } })
            <a class="btn btn-primary" id="btnChuDeIMG" href="#">Chọn ảnh</a>

            @Html.ValidationMessageFor(model => model.sImage, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.bStatus, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(model => model.bStatus)
                @Html.ValidationMessageFor(model => model.bStatus, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sửa" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
