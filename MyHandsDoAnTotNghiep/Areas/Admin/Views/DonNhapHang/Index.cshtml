@model PagedList.IPagedList<Model.EF.tbl_DonNhapHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Đơn nhập hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách đơn nhập hàng
}

@using (Html.BeginForm("Index", "DonNhapHang", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-12">
            <table>
                <tr>
                    <td><input type="text" class="form-control bg-light  small" name="SearchSanPham" value="@ViewBag.SearchSanPham" /></td>
                    <td><button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button></td>
                    <td><a href="~/Admin/SanPham/Create" class="btn btn-primary">Thêm mới</a></td>
                </tr>
            </table>

        </div>
    </div>
    <br />
}

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Mã đơn nhập</th>
                    <th scope="col">Mã phiếu</th>
                    <th scope="col">Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.IDDonNhapHang">
                        <td>
                            @item.IDDonNhapHang
                        </td>
                        <td>@item.IDPhieuYeuCau</td>
                        <td>@item.dNgayTao</td>

                        
                    </tr>
                }
            </tbody>
        </table>

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, SearchSanPham = @ViewBag.SearchSanPham }))


    </div>
</div>


