<div class="row">
    <div class="col-lg-12">
        <p>Đơn hàng số: HD @Model.FirstOrDefault().ID<br /></p>
        <p>Khách hàng: @Model.FirstOrDefault().sTenNguoiNhan<br /></p>
        <p>Địa chỉ: @Model.FirstOrDefault().sDiaChi<br /></p>
        <p>Email: @Model.FirstOrDefault().sEmail<br /></p>
        <p>Ngày tạo: @Model.FirstOrDefault().dNgayTao.Value.ToString("dd/MM/yyyy")<br /></p>
        <p>Số điện thoại: @Model.FirstOrDefault().sSoDienThoai<br /></p>
        <p>Trạng thái: @Model.FirstOrDefault().sTenTrangThai<br /></p>
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Đơn giá</th>
                    <th scope="col">SL</th>
                    <th scope="col">Ghi chú</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <tr id="row_@item.ID">
                            <td>
                            </td>
                            <td>@item.sTenSanPham</td>
                            <td>@item.dDongia</td>
                            <td>@item.iSoLuong</td>
                            <td>@item.sGhiChu</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchHoaDon = @ViewBag.searchHoaDon }))*@


    </div>

</div>

