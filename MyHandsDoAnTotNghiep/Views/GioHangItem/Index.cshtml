@model List<MyHandsDoAnTotNghiep.Models.GioHangItems>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/Client/js/controller/giohangjs.js"></script>
}
<div style="height:20px"></div>
<div class="container single_product_container">
    @if (Model.Count > 0)
    {
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>

                            <th>Đơn giá</th>
                            <th style="width:10%">Số lượng</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            var url = "/chi-tiet/" + item.SanPham.sTenSanPhamMeta + "-" + item.SanPham.ID;
                            <tr>
                                <td><img src="@item.SanPham.sImages" width="100" /></td>
                                <td><a href="@url">@item.SanPham.sTenSanPham</a></td>

                                <td class="product_price">
                                    @(item.SanPham.dGiaKhuyenMai.HasValue ? (item.SanPham.dGiaKhuyenMai.Value.ToString("N0")) : (item.SanPham.dGiaBan.Value.ToString("N0")))
                                    <span>@(item.SanPham.dGiaBan.HasValue ? item.SanPham.dGiaBan.Value.ToString("N0") : " ")</span>
                                </td>
                                <td><input type="number" class="txtQuantity" data-id="@item.SanPham.ID" value="@item.SoLuong" /></td>
                                <td class="product_price">@((item.SanPham.dGiaKhuyenMai.HasValue ? (item.SanPham.dGiaKhuyenMai * item.SoLuong).Value.ToString("N0") : (item.SanPham.dGiaBan * item.SoLuong).Value.ToString("N0")))</td>
                                <td>
                                    <a href="#" data-id="@item.SanPham.ID" class="btn btn-white border-secondary bg-white btn-md mb-2 btn-delete">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Tổng tiền:</td>
                            <td> &nbsp;@Model.Sum(x => x.SanPham.dGiaBan).Value.ToString("N0")</td>
                        </tr>
                    </tfoot>
                </table>
                <table class="table">
                    <tr>
                        <td style="width:90%">
                            <a href="/Home/Index">
                                <i class="fa fa-angle-double-left"></i> Tiếp tục mua sắm
                            </a>
                        </td>
                        <td style="margin-left:100px">
                            <button id="btnCapNhat" href="#" class="btn btn-primary ">Cập nhật giỏ hàng</button>
                        </td>
                        <td style="">
                            <button id="btnDatHang" href="#" class="btn btn-primary">Tiến hành đặt hàng</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
    else
    {
        <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
    }
</div>