<div id="wrapper">
    @RenderPage("NavbarPersonal.cshtml")

    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content" style="margin-top:180px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <input type="hidden" id="hdnIDbaiviet" name="hdnIDbaiviet" value="@Model.IDBaiViet" />

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.sTieuDe, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.sTieuDe, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(model => model.sTieuDe, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.sImages, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.sImages, new { htmlAttributes = new { @class = "form-control form-control-user" }, @id = "txtBaiVietIMG" })
                                    <a class="btn btn-primary" id="btnBaiVietIMG" href="#">Chọn ảnh</a>
                                    @Html.ValidationMessageFor(model => model.sImages, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IDChuDe, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.IDChuDe, null, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(model => model.IDChuDe, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sXemTruoc, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.sXemTruoc, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.sXemTruoc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sNoiDung, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.sNoiDung, new { htmlAttributes = new { @class = "form-control form-control-user" }, id = "sNoiDung" })
                                    @Html.ValidationMessageFor(model => model.sNoiDung, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.sTags, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.sTags, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(model => model.sTags, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm bài viết" class="btn btn-primary btn-user btn-block" />
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

