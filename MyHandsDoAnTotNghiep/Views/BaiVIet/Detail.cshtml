@model Model.EF.tbl_BaiViet
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="height:200px"></div>
<div class="container">
    <div class="row">
        <div class="col-lg-8 single-content">

            <p class="mb-5">
                <img src="@Model.sImages" alt="Image" class="img-fluid">
            </p>
            <h1 class="mb-4">
                @Model.sTieuDe
            </h1>
            <div class="post-meta d-flex mb-5">
                <div class="bio-pic mr-3">
                    <img src="images/person_1.jpg" alt="Image" class="img-fluidid">
                </div>
                <div class="vcard">
                    <span class="d-block"><a href="#">@Model.sNguoiTao</a></span>
                    <span class="date-read">@Model.dNgayTao <span class="mx-1">&bullet;</span> 3 min read <span class="icon-star2"></span></span>
                </div>
            </div>

            @Html.Raw(Model.sNoiDung)


            <div class="pt-5">
                <p>
                    Categories:  <a href="#">Design</a> Tags: @{
                        var tags = (List<Model.EF.tbl_Tag>)ViewBag.Tag;
                        foreach (var t in tags)
                        {
                            <a href="/tag/@t.TagID">#@t.sTenTag</a>
                        }
                    }
                </p>
            </div>
        </div>
    </div>
</div>
